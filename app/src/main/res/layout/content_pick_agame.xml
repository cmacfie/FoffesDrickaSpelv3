    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/pickAGameWallpaper"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20dp"
        android:gravity="center">
        <minigames.SquareImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/gamewheel"
            android:contentDescription="GameWheel"
            android:nestedScrollingEnabled="false"
            android:onClick="onClick_rotateWheel" />

        <minigames.SquareFrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/pieSliceHolder">

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice0" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice1" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice2" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice3" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice4" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice5" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice6" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice7" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice8" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice9" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice10" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice11" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice12" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="visible"
                android:id="@+id/pieSlice13"/>

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice14" />

            <minigames.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:id="@+id/pieSlice15" />


        </minigames.SquareFrameLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="70dp"
        android:maxHeight="70dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:layout_marginRight="3dp"
        android:src="@drawable/arrow"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
